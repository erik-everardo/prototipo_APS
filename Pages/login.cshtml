@page
@model PrototipoAPS.Pages.login

@{
    Layout = "Shared/login_layout";
    ViewData["Title"] = "Iniciar sesión";
}
<nav class="navbar navbar-fixed-top navbar-expand-lg navbar-dark bg-dark">
    <div class="navbar-header">
        <a class="navbar-brand" href="">Iniciar sesión | Colegio San Luis</a>
    </div>
</nav>
<div class="container">
    <div class="d-flex justify-content-center">
        <div class="card mt-5">
            <form method="post" asp-page="/Dashboard/Index">
                <div class="form-group p-3 m-2">
                    <input type="text" name="username" placeholder="Ingrese nombre de usuario" class="form-control mb-2" autocomplete="false"/>
                    <input type="password" name="password" placeholder="Ingrese contraseña" class="form-control" autocomplete="false"/>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary m-3">Enter</button>
                </div>
            </form>
        </div>
    </div> 
</div>