@page
@model PrototipoAPS.Pages.Dashboard.AltasBajasCambios

@switch (Model.what)
{
    case "registrar_maestro":
    {
      ViewData["Title"] = "Registrar maestro";
      ViewData["header"] = "Altas, bajas y cambios / Registrar maestro";
      <!-- Contenido del formulario del modulo de altas y bajas de maestros. -->
      <content>
        <br> <!-- Se separa un poco el contenido del navBar -->

        <label>
          En esta pagina puedes dar de alta a un docente en la base de datos
        </label>
        <!-- La etiqueta content contiene al formulario en si y un label que describe el funcionamiento del formulario. -->

        <form>
          <!-- Dentro de la etiqueta form nos encontramos con los campos correspondientes que necesitan ser llenados. -->

          <!-- Nombre del docente -->
          <div class="row">
            <div class="col">
              <input type="text" class="form-control" id="nombre_maestro" placeholder="Ingresar Nombre" name="nombre">
            </div>
            <div class="col">
              <!-- Apellido paterno del docente -->
              <input type="text" class="form-control" id="paterno_maestro" placeholder="Ingresar Apellido Paterno" name="paterno">
            </div>
            <div class="col">
              <!-- Apellido materno del docente -->
              <input type="text" class="form-control" id="materno_maestro" placeholder="Ingresar Apellido Materno" name="materno">
            </div>
          </div>

          <br><!-- Espacio entre campos del formulario -->

          <div class="row">
            <div class="col">
              <!-- Este boton reinicia los campos a su valor default -->
              <button type="reset" class="btn btn-danger btn-block">Cancelar</button>
            </div>
            <div class="col">
              <!-- Este boton agrega elementos a la lista inferior -->
              <button type="submit" class="btn btn-success btn-block">Agregar</button>
            </div>
          </div>

        </form>
      </content>

      <br><!-- Espacio entre campos del formulario -->

     <a>Lista de docentes registrados en la base de datos.</a>
     <div class="list-group">
       <!-- Esta lista muestra todos los elementos que se daran de alta en la base de datos -->
       <a href="#" class="list-group-item list-group-item-action bg-dark text-light border-white">Docente 1: Nombre Apellido Paterno Apellido Materno</a>
       <a href="#" class="list-group-item list-group-item-action bg-dark text-light border-white">Docente 2: Nombre Apellido Paterno Apellido Materno</a>
       <a href="#" class="list-group-item list-group-item-action bg-dark text-light border-white">Docente 3: Nombre Apellido Paterno Apellido Materno</a>
       <a href="#" class="list-group-item list-group-item-action bg-dark text-light border-white">Docente 4: Nombre Apellido Paterno Apellido Materno</a>
     </div>

     <br><!-- Espacio entre la lista de docentes a agregar y los botones de altas -->

     <div class="row">
       <div class="col">
         <!-- Este botn descata una alta seleccionada de la lista de elementos -->
         <button type="submit" class="btn btn-warning btn-block">Descartar Alta</button>
       </div>
       <div class="col">
         <!-- Este boton da de alta todos los objetos en la lista de elementos -->
         <button type="submit" class="btn btn-primary btn-block">Realizar Altas</button>
      </div>
     </div>

     <br><!-- Espacio entre los botones de altas y el control de la paginacion -->

     <ul class="pagination justify-content-center">
       <!-- Este es un control de pagniacion, cambia de pagina la lista de altas -->
       <li class="page-item"><a class="page-link" href="#">Anterior</a></li>
       <li class="page-item active"><a class="page-link" href="#">1</a></li>
       <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
     </ul>

    }
        break;
    case "dar_de_baja_un_maestro":
    {
      ViewData["Title"] = "Dar de baja un maestro";
      ViewData["header"] = "Altas, bajas y cambios / Dar de baja un maestro";
        <!-- Contenido del formulario del modulo de altas y vajas de maestros. -->
      <content>
        <br> <!-- Se separa un poco el contenido del navBar -->

        <label>
          Desde esta pagina se realizan bajas de docentes en la base de datos, ya sea por su ID o por su nombre.
        </label>
        <!-- La etiqueta content contiene al formulario en si y un label que describe el funcionamiento del formulario. -->

        <form>
          <!-- Dentro de la etiqueta form nos encontramos con los campos correspondientes que necesitan ser llenados. -->

          <div class="row">
            <div class="col">
              <!-- Nombre del docente -->
              <input type="text" class="form-control" id="nombre_maestro" placeholder="Ingresar el nombre del docente" name="nombre">
            </div>
            <div class="col">
              <!-- ID del docente -->
              <input type="text" class="form-control" id="id_maestro" placeholder="Ingresar id del docente" name="id">
            </div>
          </div>

          <br><!-- Espacio entre campos del formulario -->

          <div class="row">
            <div class="col">
              <!-- Este boton da de baja a un docente de la base de datos -->
              <button type="submit" class="btn btn-success btn-block">Dar de baja</button>
            </div>
            <div class="col">
              <!-- Este boton reinicia los campos a su valor default -->
              <button type="reset" class="btn btn-danger btn-block">Cancelar</button>
            </div>
          </div>

        </form>
      </content>

      <br><!-- Espacio entre campos del formulario -->

      <a>Lista de docentes registrados en la base de datos.</a>
      <ul class="list-group">
        <!-- Esta es una lista de los docentes que se enceuntran registrados en la base de datos con su respectivo ID -->
       <li class="list-group-item d-flex justify-content-between align-items-center bg-dark text-light border-white">
         Maestro 1: Nombre Apellido Paterno Apellido Materno
         <span class="badge badge-primary badge-pill badge-info">ID: 0</span>
       </li>
       <li class="list-group-item d-flex justify-content-between align-items-center bg-dark text-light border-white">
         Maestro 2: Nombre Apellido Paterno Apellido Materno
         <span class="badge badge-primary badge-pill badge-info">ID: 1</span>
       </li>
       <li class="list-group-item d-flex justify-content-between align-items-center bg-dark text-light border-white">
         Maestro 3: Nombre Apellido Paterno Apellido Materno
         <span class="badge badge-primary badge-pill badge-info">ID: 2</span>
       </li>
       <li class="list-group-item d-flex justify-content-between align-items-center bg-dark text-light border-white">
         Maestro 4: Nombre Apellido Paterno Apellido Materno
         <span class="badge badge-primary badge-pill badge-info">ID: 3</span>
       </li>
       <li class="list-group-item d-flex justify-content-between align-items-center bg-dark text-light border-white">
         Maestro 5: Nombre Apellido Paterno Apellido Materno
         <span class="badge badge-primary badge-pill badge-info">ID: 4</span>
       </li>
       <li class="list-group-item d-flex justify-content-between align-items-center bg-dark text-light border-white">
         Maestro 6: Nombre Apellido Paterno Apellido Materno
         <span class="badge badge-primary badge-pill badge-info">ID: 5</span>
       </li>
     </ul>

      <br><!-- Espacio entre campos del formulario -->

      <ul class="pagination justify-content-center">
        <!-- Control de paginacion de la lista -->
       <li class="page-item"><a class="page-link" href="#">Anterior</a></li>
       <li class="page-item active"><a class="page-link" href="#">1</a></li>
       <li class="page-item"><a class="page-link" href="#">2</a></li>
       <li class="page-item"><a class="page-link" href="#">3</a></li>
       <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
     </ul>
    }
        break;
}